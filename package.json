{
  "name": "restore-vote",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "bun run fetch-policies",
    "dev": "vite",
    "build": "vite build",
    "lint": "tsc --noEmit --project tsconfig.app.json && biome check .",
    "lint:fix": "tsc --noEmit --project tsconfig.app.json && biome check --write .",
    "format": "biome format --write .",
    "preview": "vite preview",
    "prepare": "husky",
    "fetch-policies": "tsx scripts/fetch-policies.ts"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "logrocket": "^10.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "viem": "^2.37.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.5.3",
    "vite": "^5.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["bun run lint:fix", "bun run format"]
  }
}
